<div class="row-fluid center">
	<div class="span8 offset2">
		<h2><img src='/assets/login.png'/> Sign in</h2>
	</div>
</div>
<div class="row-fluid center">
	<div class="span8 offset2">
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "", :id => "" }) do |f| %>
			  <div class="controls">
			  	<%= f.email_field :email, :placeholder => "Email address", :class => "span4" %>
					<%= f.password_field :password , :placeholder => "Password", :class => "span4" %>
				</div>
				<div class="row-fluid">
				  <%= f.submit "Sign in", :class => "btn btn-primary span4" %>
				  <div class="clearfix"></div>
				</div>
				  <% if devise_mapping.rememberable? -%>
				    <div class=""><%= f.check_box :remember_me %><%= f.label :remember_me %></div>
				  <% end -%>
				</div>
			<% end %>
	</div>
	<p class="center"><%= render "devise/shared/links" %></p>
</div>