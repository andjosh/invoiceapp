<div class="row-fluid center">
  <div class="span8 offset2">
    <h2><%= resource.image ? image_tag(resource.image, :size => '40x40', :class => "img-circle") : "<img src='/assets/user.png'style='height:60px; width:60px;'/>".html_safe %> Edit your account</h2>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="controls">
        <%= f.email_field :email, :placeholder => "Email address", :class => "span4" %>
        <%= f.text_field :name, :placeholder => "Display name", :class => "span4" %>
        <%= f.text_field :company_name, :placeholder => "Company name", :class => "span4" %>
        <%= f.text_field :website, :placeholder => "Website", :class => "span3" %>
        <%= f.text_field :about, :placeholder => "Position/About", :class => "span8" %>
        <div class="span12"><p>Billing/Contact information</p></div>
        <%= f.text_field :address, :placeholder => "Street Address", :class => "span5" %>
        <%= f.text_field :city, :placeholder => "City", :class => "span3" %>
        <%= f.text_field :state, :placeholder => "State", :class => "span2" %>
        <%= f.text_field :zip, :placeholder => "Zip", :class => "span2" %>
        <%= f.phone_field :phone, :placeholder => "Phone", :class => "span2" %>
        <%= f.phone_field :office_phone, :placeholder => "Office Phone", :class => "span2" %>
        <br>
        <div class="span12"><p>Change of password</p></div>
        <%= f.password_field :password, :autocomplete => "off", :placeholder => "New Password", :class => "span3" %>
        <%= f.password_field :password_confirmation, :placeholder => "Confirm New password", :class => "span3" %>

        <div><hr><i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, :placeholder => "Current Password" %></div>

        <div><%= f.submit "Update", :class => "btn btn-primary span2" %></div>
      </div>
    <% end %>
    <p class="pull-right">Unhappy? <%= link_to "Cancel your account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => "text-error" %>.</p>
  </div>
</div>