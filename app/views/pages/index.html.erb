<% if !current_user %>
	<%= render "welcome" %>
<% else %>
	<div class="row-fluid">
		<div class="span12">
			<h1 class="center">Thanks for joining us, <%= current_user.name ? (link_to current_user.name, edit_user_path(current_user)) : (link_to current_user.email, edit_user_path(current_user)) %></h1>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span8 offset2 center">
			<h2>We're working hard to get things up and running.</h2>
			<p class="lead center" style="padding-top:80px;margin-top:20px;"><small>Samurai says:</small> Patience is bitter, but its fruit is sweet.</p>
			<img style="margin-top:-12px;width:250px;height:250px;" src='/assets/mount.png'/>
		</div>
	</div>
<% end %>