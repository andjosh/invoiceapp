<div class="row-fluid center animated fadeInDown delay1 space-bottom">
  <div class="span8 offset2">
    <h2><a href="<%= clients_path %>"><img src='/assets/client.png' style='margin-top:-10px;width:100px;height:100px;'/></a></h2>
    <h1><%= @client.name %><%= !(@client.company_name == '') ? (', '+@client.company_name) : ('') %></h1>
  </div>
</div>
<div class="row-fluid animated fadeInDown space-bottom">
  <div class="span6 offset3">
    <p class="lead"><%= @client.name %></p>
    <p><a href="mailto:<%= @client.email %>" target="_blank"><%= @client.email %></a></p>
    <p><%= @client.title %></p>
    <p><%= @client.company_name %></p>
    <p><a href="<%= @client.website %>" target="_blank"><%= @client.website %></a></p>
  </div>
</div>
<div class="row-fluid animated fadeInDown space-bottom">
  <div class="span4 offset3">
    <% unless @client.address.blank? %>
      <p><%= @client.address %></p>
      <p><%= @client.city %>, <%= @client.state %> <%= @client.zip %></p>
    <% end %>
  </div>
  <div class="span4">
    <p>Phone: <a href="tel:<%= @client.phone %>" target="_blank"><%= @client.phone %></a></p>
    <p>Office: <a href="tel:<%= @client.office_phone %>" target="_blank"><%= @client.office_phone %></a></p>
  </div>
</div>

<div class="center space-bottom">
  <%= link_to 'Edit this client', edit_client_path(@client), :class => 'btn btn-primary btn-warning' %> 
  <%= link_to 'All clients', clients_path, :class => 'btn btn-primary' %>
</div>
<div class="row-fluid center space-bottom animated fadeInUp">
  <% @invoices.each do |i| %>
    <a href="<%= invoice_path(i) %>">
    <div class="span6">
      <h3><%= i.rand %></h3>
    </div>
  </a>
  <% end %>
</div>