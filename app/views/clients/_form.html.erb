<div class="row-fluid animated fadeInDown space-bottom">
  <div class="span12">
    <%= form_for(@client) do |f| %>
      <% if @client.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>
          <ul>
          <% @client.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="controls">
        <%= f.text_field :name, :placeholder => 'Client Name', :class => 'span4' %>
        <%= f.text_field :title, :placeholder => 'Client Title/Position', :class => 'span5' %>
        <%= f.email_field :email, :placeholder => 'Contact email address', :class => 'span3' %>
        <%= f.text_field :company_name, :placeholder => 'Company Name', :class => 'span6' %>
        <%= f.url_field :website, :placeholder => 'Website', :class => 'span3' %>
        <div class="span12"><p>Billing/Contact information</p></div>
        <%= f.text_field :address, :placeholder => 'Billing Street Address', :class => 'span6' %>
        <%= f.text_field :city, :placeholder => 'City', :class => 'span4' %>
        <%= f.text_field :state, :placeholder => 'State', :class => 'span2' %>
        <%= f.text_field :zip, :placeholder => 'Zip code', :class => 'span3' %>
        <%= f.phone_field :phone, :placeholder => 'Contact phone', :class => 'span3' %>
        <%= f.phone_field :office_phone, :placeholder => 'Office phone', :class => 'span3' %>
        <br>
        <div class="center"><%= f.submit "Impress this client", :class => "btn btn-primary span4" %></div>
      </div>
    <% end %>
  </div>
</div>
