<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">

      <%= link_to "<img src='/assets/ronin-nav.png'/> Roninvoice".html_safe, root_path, :class => "brand" %>

      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <div class="nav-collapse">
        <ul class="nav pull-right">
          <% if user_signed_in? %>
          <li><%= link_to "<img src='/assets/nav-contract.png' style='width:30px;height:30px;margin-top:-5px;'/>".html_safe, "#", :title => "Contracts" %></li>
            <li><%= link_to "<img src='/assets/nav-invoice.png' style='width:25px;height:25px;margin-top:-5px;'/>".html_safe, "#", :title => "Invoicing" %></li>
            <li><%= link_to "<img src='/assets/nav-client.png' style='width:30px;height:30px;margin-top:-5px;'/>".html_safe, user_clients_path(current_user), :title => "Clients" %></li>
            <% if current_user.admin? %>
              <li><%= link_to "<i class='icon-magic icon-large'></i>".html_safe, admin_path, :title => "Admin" %></li>
            <% end %>
            <li><%= link_to "<i class='icon-cogs icon-large'></i>".html_safe, edit_user_path(current_user), :title => "Account settings" %></li>
            <li><%= link_to "<i class='icon-signout icon-large'></i>".html_safe, destroy_user_session_path, :title => "Sign out" %></li>
          <% else %>
            <li><%= link_to "Sign in", new_user_session_path %></li>
            <li><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %></li>
          <% end -%>
        </ul>
      </div>

    </div>
  </div>
</div>
